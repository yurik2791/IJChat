<Window x:Class="IJChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IJChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Grid.Background>
			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Color="Black" Offset="0"/>
				<GradientStop Color="#FFE6D6D6" Offset="1"/>
			</LinearGradientBrush>
		</Grid.Background>
		<Button x:Name="button" Content="Send" HorizontalAlignment="Left" Margin="432,280,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" Background="#FFBDBCBC"/>
		<RichTextBox x:Name="rtb_one" HorizontalAlignment="Left" Height="219" Margin="10,11,0,0" VerticalAlignment="Top" Width="405">
			<FlowDocument/>
		</RichTextBox>
		<RichTextBox x:Name="rtb_two" HorizontalAlignment="Left" Height="57" Margin="10,243,0,0" VerticalAlignment="Top" Width="405">
			<FlowDocument>
				<Paragraph>
					<Run Text=""/>
				</Paragraph>
			</FlowDocument>
		</RichTextBox>

	</Grid>
</Window>
